{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "View/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*\\.html)",
      "dest": "/View/$1"
    },
    {
      "src": "/(.*\\.(jpg|jpeg|png|gif|ico|css|js))",
      "dest": "/View/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}
